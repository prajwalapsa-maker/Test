    <script>
        let currentStructure = null;
        let selectedFile = null;

        // Initialize app
        async function init() {
            try {
                const response = await fetch('/api/root-info');
                const data = await response.json();
                
                if (data.configured) {
                    document.getElementById('current-path').textContent = data.folderName;
                    document.getElementById('sidebar-header').textContent = `📂 ${data.folderName}`;
                    document.getElementById('header-controls').style.display = 'flex';
                    hideConfig();
                    await loadStructure();
                } else {
                    showConfig();
                }
            } catch (error) {
                showConfig();
            }
        }

        // Show/hide config modal
        function showConfig() {
            document.getElementById('config-modal').style.display = 'flex';
        }

        function hideConfig() {
            document.getElementById('config-modal').style.display = 'none';
        }

        // Set example path
        function setExample(path) {
            document.getElementById('folder-input').value = path;
        }

        // Set folder
        async function setFolder() {
            const path = document.getElementById('folder-input').value.trim();
            if (!path) return;

            try {
                const response = await fetch('/api/set-root', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ folderPath: path })
                });

                const result = await response.json();
                if (result.success) {
                    document.getElementById('current-path').textContent = result.folderName;
                    document.getElementById('sidebar-header').textContent = `📂 ${result.folderName}`;
                    document.getElementById('header-controls').style.display = 'flex';
                    hideConfig();
                    await loadStructure();
                } else {
                    alert(result.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        // Load folder structure - NEW APPROACH
        async function loadStructure() {
            try {
                document.getElementById('tree-container').innerHTML = '<div class="loading"><div class="loading-spinner"></div>Loading...</div>';
                
                const response = await fetch('/api/home-structure');
                const structure = await response.json();
                
                currentStructure = structure;
                renderTree(structure);
            } catch (error) {
                document.getElementById('tree-container').innerHTML = 
                    '<div class="error">Error loading structure: ' + error.message + '</div>';
            }
        }

        // Create tree node for folders
        function createFolderNode(folder, level = 0) {
            // Show expand icon if folder has ANY content (folders OR files)
            const hasContent = (folder.folders && folder.folders.length > 0) || 
                             (folder.files && folder.files.length > 0);
            
            const folderDiv = document.createElement('div');
            folderDiv.className = 'tree-node folder-node';
            folderDiv.setAttribute('data-path', folder.path);
            folderDiv.setAttribute('data-level', level);
            
            const paddingLeft = 20 + (level * 20);
            
            folderDiv.innerHTML = `
                <div class="folder-item" onclick="toggleFolder(this, '${folder.path}', ${level})" style="padding-left: ${paddingLeft}px;">
                    <span class="expand-icon">${hasContent ? '▶' : ''}</span>
                    <span class="folder-icon">📁</span>
                    <span class="folder-name" title="${folder.name}">${folder.name}</span>
                    <span class="folder-stats">${hasContent ? `(${(folder.folders?.length || 0) + (folder.files?.length || 0)})` : '(empty)'}</span>
                </div>
                <div class="folder-children" data-path="${folder.path}" style="display: none;"></div>
            `;
            
            return folderDiv;
        }

        // Create tree node for files
        function createFileNode(file, level = 0) {
            const fileDiv = document.createElement('div');
            fileDiv.className = 'tree-node file-node';
            fileDiv.setAttribute('data-path', file.path);
            fileDiv.setAttribute('data-level', level);
            
            const paddingLeft = 40 + (level * 20);
            
            fileDiv.innerHTML = `
                <div class="file-item" onclick="selectFile('${file.path}', '${file.name}', this)" style="padding-left: ${paddingLeft}px;">
                    <span class="file-icon">${getFileIcon(file.type)}</span>
                    <span class="file-name" title="${file.name}">${file.name}</span>
                </div>
            `;
            
            return fileDiv;
        }

        // Render complete folder tree structure - SHOWS FILES AT ROOT LEVEL
        function renderTree(structure, container = null, level = 0) {
            if (!container) {
                container = document.getElementById('tree-container');
                container.innerHTML = '';
            }

            // Create document fragment for better performance
            const fragment = document.createDocumentFragment();

            // Render folders first (sorted alphabetically)
            const sortedFolders = [...(structure.folders || [])].sort((a, b) => 
                a.name.toLowerCase().localeCompare(b.name.toLowerCase())
            );
            
            sortedFolders.forEach(folder => {
                const folderNode = createFolderNode(folder, level);
                fragment.appendChild(folderNode);
            });

            // Render files after folders (sorted alphabetically) - NOW SHOWS AT ALL LEVELS INCLUDING ROOT
            const sortedFiles = [...(structure.files || [])].sort((a, b) => 
                a.name.toLowerCase().localeCompare(b.name.toLowerCase())
            );
            
            sortedFiles.forEach(file => {
                const fileNode = createFileNode(file, level);
                fragment.appendChild(fileNode);
            });

            // Append all nodes at once
            container.appendChild(fragment);

            // Show summary info at root level
            if (level === 0 && container.id === 'tree-container') {
                const totalFolders = sortedFolders.length;
                const totalFiles = sortedFiles.length;
                
                if (totalFolders === 0 && totalFiles === 0) {
                    const emptyMsg = document.createElement('div');
                    emptyMsg.className = 'tree-empty';
                    emptyMsg.innerHTML = `
                        <div style="text-align: center; padding: 20px; color: #999;">
                            📂 This folder is empty
                        </div>
                    `;
                    container.appendChild(emptyMsg);
                }
            }
        }

        // Enhanced toggle folder function with better state management
        function toggleFolder(element, folderPath, level = 0) {
            const expandIcon = element.querySelector('.expand-icon');
            const folderNode = element.closest('.tree-node');
            const children = folderNode.querySelector('.folder-children');
            
            // Check if folder has content to expand
            if (!expandIcon.textContent) return;
            
            const isCurrentlyExpanded = children.classList.contains('show');
            
            if (isCurrentlyExpanded) {
                // Collapse folder
                collapseFolder(element, children, expandIcon);
            } else {
                // Expand folder
                expandFolder(element, children, expandIcon, folderPath, level);
            }
        }

        // Collapse folder function
        function collapseFolder(element, children, expandIcon) {
            children.classList.remove('show');
            children.style.display = 'none';
            expandIcon.classList.remove('rotated');
            expandIcon.textContent = '▶';
            element.classList.remove('expanded');
            
            // Update folder icon
            const folderIcon = element.querySelector('.folder-icon');
            folderIcon.textContent = '📁';
        }

        // Expand folder function - WORKS WITH FILES ONLY OR FOLDERS ONLY
        function expandFolder(element, children, expandIcon, folderPath, level) {
            const folder = findFolderInStructure(currentStructure, folderPath);
            
            if (!folder) {
                console.error('Folder not found in structure:', folderPath);
                return;
            }
            
            // Check if folder has ANY content (files OR folders)
            const hasFiles = folder.files && folder.files.length > 0;
            const hasFolders = folder.folders && folder.folders.length > 0;
            const hasAnyContent = hasFiles || hasFolders;
            
            if (!hasAnyContent) {
                // Show empty folder message
                children.innerHTML = `
                    <div style="padding: 10px 20px; color: #999; font-style: italic; font-size: 0.8rem;">
                        📂 Empty folder
                    </div>
                `;
                children.classList.add('show');
                children.style.display = 'block';
                expandIcon.classList.add('rotated');
                expandIcon.textContent = '▼';
                element.classList.add('expanded');
                
                // Update folder icon to open state
                const folderIcon = element.querySelector('.folder-icon');
                folderIcon.textContent = '📂';
                return;
            }
            
            // Clear existing content
            children.innerHTML = '';
            
            // Render folder contents (both subfolders AND files)
            renderTree(folder, children, level + 1);
            
            // Show the children container
            children.classList.add('show');
            children.style.display = 'block';
            
            // Update expand icon
            expandIcon.classList.add('rotated');
            expandIcon.textContent = '▼';
            element.classList.add('expanded');
            
            // Update folder icon to open state
            const folderIcon = element.querySelector('.folder-icon');
            folderIcon.textContent = '📂';
        }

        // Enhanced function to find folder in nested structure
        function findFolderInStructure(structure, targetPath) {
            if (!structure) return null;
            
            // Check current level folders
            for (const folder of structure.folders || []) {
                if (folder.path === targetPath) {
                    return folder;
                }
                
                // Search recursively in subfolders
                const found = findFolderInStructure(folder, targetPath);
                if (found) return found;
            }
            
            return null;
        }

        // Select file
        async function selectFile(filePath, fileName, element) {
            try {
                // Remove active class from all files
                document.querySelectorAll('.file-item.active').forEach(el => {
                    el.classList.remove('active');
                });
                
                // Add active class to selected file
                element.classList.add('active');
                
                selectedFile = filePath;
                
                // Load file content
                const response = await fetch(`/api/file/${filePath}`);
                const fileData = await response.json();
                
                displayFileContent(fileData, fileName);
            } catch (error) {
                alert('Error loading file: ' + error.message);
            }
        }

