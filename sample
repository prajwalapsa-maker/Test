        // Display file content
        function displayFileContent(fileData, fileName) {
            const header = document.getElementById('content-header');
            const title = document.getElementById('content-title');
            const body = document.getElementById('content-body');
            
            header.style.display = 'block';
            title.textContent = fileName;
            
            let content = `
                <div class="file-info">
                    <div class="file-info-row">
                        <span class="file-info-label">Name:</span>
                        <span class="file-info-value">${fileData.name}</span>
                    </div>
                    <div class="file-info-row">
                        <span class="file-info-label">Type:</span>
                        <span class="file-info-value">${getFileTypeName(fileData.type)}</span>
                    </div>
                    <div class="file-info-row">
                        <span class="file-info-label">Size:</span>
                        <span class="file-info-value">${formatFileSize(fileData.size)}</span>
                    </div>
                    <div class="file-info-row">
                        <span class="file-info-label">Modified:</span>
                        <span class="file-info-value">${new Date(fileData.modified).toLocaleString()}</span>
                    </div>
                </div>
            `;
            
            // Handle different content types
            if (fileData.isImage) {
                content += `<div class="file-content image"><img src="${fileData.content}" alt="${fileName}"></div>`;
            } else if (fileData.isExcel) {
                content += `<div class="file-content excel">${fileData.content}</div>`;
            } else if (fileData.isPdf) {
                content += `<div class="file-content pdf">${fileData.content}</div>`;
            } else {
                content += `<div class="file-content">${fileData.content}</div>`;
            }
            
            // Add download button for all files except plain text files
            if (fileData.downloadable && (!fileData.isText || fileData.isExcel || fileData.isPdf)) {
                const buttonText = fileData.isExcel || fileData.isPdf ? 
                    '💾 Download Original File' : '💾 Download File';
                content += `<button class="download-btn" onclick="downloadFile()">${buttonText}</button>`;
            }
            
            body.innerHTML = content;
        }

        // Download file
        function downloadFile() {
            if (selectedFile) {
                window.open(`/api/download/${selectedFile}`, '_blank');
            }
        }

        // Get file icon
        function getFileIcon(type) {
            const icons = {
                // Documents
                'txt': '📝', 'csv': '📊', 'xlsx': '📊', 'xls': '📊',
                'docx': '📘', 'doc': '📘', 'pdf': '📕',
                'pptx': '📊', 'ppt': '📊',
                
                // Images
                'jpg': '🖼️', 'jpeg': '🖼️', 'png': '🖼️', 'gif': '🖼️',
                'bmp': '🖼️', 'webp': '🖼️', 'svg': '🖼️', 'ico': '🖼️',
                
                // Audio
                'mp3': '🎵', 'wav': '🎵', 'flac': '🎵', 'aac': '🎵', 'ogg': '🎵',
                
                // Video
                'mp4': '🎬', 'avi': '🎬', 'mkv': '🎬', 'mov': '🎬', 
                'wmv': '🎬', 'flv': '🎬',
                
                // Code
                'html': '🌐', 'css': '🎨', 'js': '⚡', 'json': '⚙️',
                'xml': '⚙️', 'php': '💻', 'py': '🐍', 'java': '☕',
                'cpp': '💻', 'c': '💻', 'sql': '🗃️',
                
                // Archives
                'zip': '🗜️', 'rar': '🗜️', '7z': '🗜️', 'tar': '🗜️', 'gz': '🗜️',
                
                // System
                'exe': '⚙️', 'msi': '⚙️', 'dmg': '💿', 'iso': '💿',
                'log': '📋', 'ini': '⚙️', 'cfg': '⚙️', 'conf': '⚙️',
                'md': '📝'
            };
            return icons[type] || '📄';
        }

        // Get file type name
        function getFileTypeName(type) {
            const types = {
                // Documents
                'txt': 'Text File', 'csv': 'CSV File', 'xlsx': 'Excel File', 'xls': 'Excel File',
                'docx': 'Word Document', 'doc': 'Word Document', 'pdf': 'PDF Document',
                'pptx': 'PowerPoint', 'ppt': 'PowerPoint',
                
                // Images  
                'jpg': 'JPEG Image', 'jpeg': 'JPEG Image', 'png': 'PNG Image', 'gif': 'GIF Image',
                'bmp': 'Bitmap Image', 'webp': 'WebP Image', 'svg': 'SVG Image', 'ico': 'Icon File',
                
                // Audio
                'mp3': 'MP3 Audio', 'wav': 'WAV Audio', 'flac': 'FLAC Audio', 'aac': 'AAC Audio', 'ogg': 'OGG Audio',
                
                // Video
                'mp4': 'MP4 Video', 'avi': 'AVI Video', 'mkv': 'MKV Video', 'mov': 'QuickTime Video',
                'wmv': 'WMV Video', 'flv': 'Flash Video',
                
                // Code
                'html': 'HTML Document', 'css': 'Stylesheet', 'js': 'JavaScript', 'json': 'JSON Data',
                'xml': 'XML Document', 'php': 'PHP Script', 'py': 'Python Script', 'java': 'Java Source',
                'cpp': 'C++ Source', 'c': 'C Source', 'sql': 'SQL Script',
                
                // Archives
                'zip': 'ZIP Archive', 'rar': 'RAR Archive', '7z': '7-Zip Archive', 'tar': 'TAR Archive', 'gz': 'GZIP Archive',
                
                // System
                'exe': 'Executable', 'msi': 'Windows Installer', 'dmg': 'Mac Disk Image', 'iso': 'ISO Image',
                'log': 'Log File', 'ini': 'Config File', 'cfg': 'Config File', 'conf': 'Config File', 'md': 'Markdown'
            };
            return types[type] || (type ? type.toUpperCase() + ' File' : 'File');
        }

        // Format file size
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

